<?xml version="1.0"?>
<PropertyList>

    <pid-controller>
        <name>Pedal assist</name>
        <debug>false</debug>
        <enable>
            <condition>
                <property>controls/flight/auto-pedals</property>
            </condition>
        </enable>
        <input>
            <property>orientation/yaw-rate-degps</property>
        </input>
        <reference>
            <property>orientation/roll-deg</property>
            <scale>1</scale>
        </reference>
        <output>
            <property>controls/flight/rudder</property>
        </output>
        <config>
            <Kp>0.025</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>1</Ti>
            <Td>0.00001</Td>
            <min>-1</min>
            <max>1</max>
        </config>
    </pid-controller>

</PropertyList>

