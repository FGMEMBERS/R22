            <step>-0.02</step>
            <min>0.30</min>
            <max>1.00</max>
            <wrap>0</wrap>
        </binding>
        </key>
-->

        <key n="78">
        <name>N</name>
        <desc>Toggle rotor brake</desc>
        <binding>
            <command>property-toggle</command>
            <property>controls/rotor/brake</property>
        </binding>
        </key>

</keyboard>
    </input>

    <nasal>
        <R22>
            <file>Aircraft/R22/Nasal/Electrical.nas</file>
            <file>Aircraft/R22/Nasal/R22.nas</file>
        </R22>
    </nasal>

</PropertyList>