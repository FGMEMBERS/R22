<!-- R22 sound config-->
<PropertyList>
    <fx>

    <crank>
        <name>crank</name>
        <mode>looped</mode>
        <path>Sounds/cranking.wav</path>
        <max-dist>5</max-dist>
        <reference-dist>2</reference-dist>
        <condition>
            <property>controls/engines/engine/starter</property>
            <not>
                <property>/engines/engine/running</property>
            </not>
        </condition>
        <volume>
        <offset>-0.5</offset>
        </volume>
        <pitch>
        <property>/engines/engine/cranking</property>
        <factor>2.0</factor>
        </pitch>
            <position>
                <x>-0.3</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
    </crank>

    <crank>
        <name>cough</name>
        <path>Sounds/coughing.wav</path>
        <property>/engines/engine/running</property>
        <max-dist>20</max-dist>
        <reference-dist>10</reference-dist>
        <volume>
            <offset>-0.50</offset>
        </volume>
        <pitch>
            <property>/engines/engine/running</property>
            <factor>1.0</factor>
        </pitch>
        <position>
            <x>-0.3</x>
            <y>0</y>
            <z>-1.5</z>
        </position>
    </crank>

    <engine>
        <name>engine</name>
        <path>Sounds/wasp.wav</path>
        <mode>looped</mode>
            <max-dist>500</max-dist>
            <reference-dist>150</reference-dist>
        <condition>
            <property>/engines/engine/running</property>
        </condition>
        <volume>
            <offset>-0.20</offset>
        </volume>
        <pitch>
            <property>/engines/engine/running</property>
            <offset>0</offset>
            <factor>0.8</factor>
        </pitch>
        <position>
            <x>-0.3</x>
            <y>0</y>
            <z>-1.5</z>
        </position>
    </engine>

        <rotor>
            <name>main rotor out</name>
            <condition>
                <not-equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                </not-equals>
            </condition>
            <mode>looped</mode>
            <path>Sounds/rotor-2blade.wav</path>
            <max-dist>500</max-dist>
            <reference-dist>150</reference-dist>
            <condition>
                <greater-than>
                <property>rotors/main/rpm</property>
                <value>5</value>
                </greater-than>
            </condition>
            <volume>
                <property>rotors/main/rpm</property>
                <factor>0.005</factor>
                <min>0</min>
                <max>0.7</max>
            </volume>
            <pitch>
                <property>rotors/main/rpm</property>
                <factor>0.0018</factor>
                <offset>0.0</offset>
                <min>0.00</min>
                <max>1.0</max>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </position>
        </rotor>

        <rotor>
            <name>main rotor inside</name>
            <condition>
                <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                </equals>
            </condition>
            <mode>looped</mode>
            <path>Sounds/rotor-2blade.wav</path>
            <max-dist>500</max-dist>
            <reference-dist>150</reference-dist>
            <condition>
                <greater-than>
                <property>rotors/main/rpm</property>
                <value>5</value>
                </greater-than>
            </condition>
            <volume>
                <property>rotors/main/rpm</property>
                <factor>0.01</factor>
                <min>0</min>
                <max>0.5</max>
            </volume>
            <pitch>
                <property>rotors/main/rpm</property>
                <factor>0.0018</factor>
                <offset>0.0</offset>
                <min>0.00</min>
                <max>1.0</max>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </position>
        </rotor>

        <contact>
            <name>ground contact</name>
            <mode>once</mode>
            <path>Sounds/helicopter-skid.wav</path>
            <condition>
                <or>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                    <property>gear/gear[3]/wow</property>
                </or>
            </condition>
            <max-dist>10</max-dist>
            <reference-dist>5</reference-dist>
            <volume>
                <factor>0.8</factor>
            </volume>
            <pitch>
                <factor>0.01</factor>
            </pitch>
            <max-dist>5.0</max-dist>
            <max-dist>10.0</max-dist>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </contact>

        <wind>
            <name>wind</name>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <condition>
                <and>
                    <property>velocities/airspeed-kt</property>
                    <not>
                        <property>sim/crashed</property>
                    </not>
                </and>
            </condition>
            <max-dist>5</max-dist>
            <reference-dist>2</reference-dist>
            <volume>
                <property>/sim/sound/S76C/Cvolume</property>
            </volume>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0.1</min>
                <max>1.0</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.03</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.0</offset>
            </pitch>
            <max-dist>10.0</max-dist>
            <position>
                <x>-2.1</x>
                <y>1.5</y>
                <z>-1.05</z>
            </position>
        </wind>

        <crash>
            <name>intense ground contact</name>
            <mode>once</mode>
            <path>Sounds/crash.wav</path>
            <property>sim/crashed</property>
            <max-dist>100</max-dist>
            <reference-dist>50</reference-dist>
            <volume>
                <factor>1</factor>
            </volume>
            <pitch>
                <factor>0.1</factor>
            </pitch>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
        </crash>

        <alert>
            <name>rpm warning</name>
            <mode>once</mode>
            <path>Sounds/beep.wav</path>
            <condition>
                <and>
                    <property>instrumentation/alerts/rpm</property>
                    <less-than>
                        <property>rotors/main/rpm</property>
                        <value>500</value>
                    </less-than>
                </and>
            </condition>
            <max-dist>2</max-dist>
            <reference-dist>1</reference-dist>
            <volume>
                <factor>1</factor>
            </volume>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
        </alert>

    </fx>
</PropertyList>
