<!-- hotspots-->

    <animation>
        <type>pick</type>
        <object-name>key.cylinder</object-name>
        <action>
            <button>0</button>
            <binding>
                <condition>
                    <less-than>
                        <property>controls/electric/key</property>
                        <value>3</value>
                    </less-than>
                </condition>
                <command>property-adjust</command>
                <property>controls/electric/key</property>
                <step>1</step>
                <min>0</min>
                <max>3</max>
                <wrap>0</wrap>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine/magnetos</property>
                <property>controls/electric/key</property>
         </binding>
        <binding>
            <condition>
                <equals>
                    <property>controls/electric/key</property>
                    <value>3</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>controls/engines/engine/starter</property>
             <value>1</value>
        </binding>
        <mod-up>
            <binding>
            <condition>
                <equals>
                    <property>controls/electric/key</property>
                    <value>3</value>
                </equals>
            </condition>
                <command>property-assign</command>
                <property>controls/engines/engine/starter</property>
                <value>0</value>
            </binding>
        </mod-up>
        <binding>
            <command>property-toggle</command>
            <property>sim/model/sound/click</property>
        </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
